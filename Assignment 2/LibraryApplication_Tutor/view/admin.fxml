<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.Text?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="controller.AdminController" styleClass="root" alignment="center" spacing="10">
    <HBox spacing="10" alignment="CENTER" styleClass="header">
        <ImageView>
            <image><Image url="@UTS.png"/></image>
        </ImageView>
        <Text text="Library System" styleClass="heading"/>
    </HBox>
    <VBox alignment="center" spacing="20" styleClass="footer">
        <Button text="Add Patron" onAction="#handleAddP"/>
        <Button text="Remove Patron" onAction="#handleRemoveP"/>
        <Button text="Add Book" onAction="#handleAddB"/>
        <Button text="Remove Book" onAction="#handleRemoveB"/>
        <Button text="Exit Administration" onAction="#exitSystem"/>
    </VBox>
    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>
</VBox>
